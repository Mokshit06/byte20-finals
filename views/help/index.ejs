<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.css' rel='stylesheet' />
  <link rel="stylesheet" href="/css/style.css">
  <script defer src="/js/app.js"></script>
  <title>Help | MedPool</title>
</head>

<body>

  <%- include('../partials/header.ejs') %>

  <div class="container">
    <div class="form">
      <h2>Help</h2>
      <% if (typeof(error) !== 'undefined') { %>
      <div class="error"><%= error %> </div>
      <% } %>
      <form method="POST" action="/help" id="form">
        <label>
          <span>Where from?</span>
          <input type="text" name="location" required>
        </label>
        <label>
          <span>Nearest Hospital</span>
          <input type="text" list="hospitals" name="hospital" required>

          <datalist id="hospitals">
            <% hospitals.forEach(hospital => { %>
            <option><%= hospital %></option>
            <% }) %>
          </datalist>

        </label>
        <div class="condition">
          <span>Medical condition</span>
          <div class="options">
            <input type="radio" id="normal" name="condition" value="normal" required>
            <label for="normal">Normal</label>
            <input type="radio" id="medium" name="condition" value="medium" required>
            <label for="medium">Medium</label>
            <input type="radio" id="extreme" name="condition" value="extreme" required>
            <label for="extreme">Extreme</label>
          </div>
        </div>
        <label>
          <span>Symptoms / Comments</span>
          <input type="text" name="symptoms" required>
        </label>

        <button type="submit">Ask for Help</button>
      </form>
    </div>
    <div class="map">
      <h2>Map</h2>
      <div id="map"></div>
    </div>
  </div>

  <%- include('../partials/footer.ejs') %>

  <script src='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.js'></script>
  <script>
    const locationPlace = document.querySelector('#location')
    mapboxgl.accessToken = 'pk.eyJ1Ijoic2Fobmluc2giLCJhIjoiY2tlNzF6OTVvMHFnOTJ6cG85YzN3Z3lhaiJ9.AmfB7dW6dzuLpOse-ryCCQ';

    const map = new mapboxgl.Map({
      container: 'map',
      style: 'mapbox://styles/mokshit06/cke7d1cu73yon19og3kxseglc',
      zoom: 4
    });

    const mapWrapper = document.querySelector('.map');

    const setMapHeight = () => {
      mapWrapper.style.minHeight = `${document.querySelector('.form').clientHeight}px`
    }

    setMapHeight()

    window.addEventListener('resize', setMapHeight)
  </script>
</body>

</html>